<html lang="en">
  <head>
    <link href='http://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=475, initial-scale=1">
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/users.min.css" rel="stylesheet">
    <title>All Uploads</title>

  </head>

  <body>

    <div id="main-container">
      <h1 id="header"><a href="/">MODWAT.CH</a></h1>
      <span id="list-container">
        <span id="search-container">
          <input type="text" class="form-control" id="filter-mods" placeholder="Filter by..."/>
          <span id="count"></span>
        </span>
        <img id="ajaxloadergif" src="/images/ajax-loader.gif"/>
        <ul class="" id="users">
        </ul>
      </span>
            
    </div>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">

      $(document).ready(function() {

        $.getJSON("/userlist", function(data) {
          $('#count').html(data.usernames.length + ' users');
          for(var i = 0; i < data.usernames.length; i++) {
            $('#ajaxloadergif').hide();
            $('#users').append('<li class="user"><a href="/'+data.usernames[i]+'">'+data.usernames[i]+'</a></li>');
          }
        });

        $('#filter-mods').keyup(function() {
          var filterText = $(this).val();
          var iterator = 0;
          $('#users > li').each(function(){
            var text = $(this).text().toLowerCase();
            if(filterText[0] == '^') {
              (text.indexOf(filterText.substr(1)) == 0) ? $(this).slideDown() : $(this).slideUp();
            } else {
              if(text.indexOf(filterText.toLowerCase()) >= 0) {
                iterator++;
                $(this).slideDown();
              } else {
                $(this).slideUp();
              }
            }
          });
        });
        $('.row-body').css('max-width', ($('#plugins').width() - 110)+'px');
      });

    </script>

